<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:onClick="onClick"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_message_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:background="@drawable/button_shape_unicorn"
        android:gravity="center"
        android:minLines="3"
        android:onClick="onClick"
        android:paddingBottom="@dimen/message_display_size"
        android:paddingLeft="@dimen/message_display_size"
        android:paddingRight="@dimen/message_display_size"
        android:paddingTop="@dimen/message_display_size"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/message_display_size" />

</LinearLayout>