<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".MainActivity"
    android:background="@android:color/holo_blue_light">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/game_title"
        android:background="@drawable/traverse"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:text="@string/main_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dip"
            android:textSize="@dimen/text_size_XL"
            android:textStyle="bold"
            android:paddingLeft="@dimen/text_size_XL"
            android:paddingRight="@dimen/text_size_XL" />

        <Button
            android:id="@+id/new_button"
            android:background="@drawable/button_shape_unicorn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_game_label"
            android:textSize="@dimen/text_size_L"
            android:textStyle="bold"
            android:onClick="startGame"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_button"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/numplayers"
                android:textSize="@dimen/text_size_S"
                android:gravity="center"
                android:layout_marginTop="@dimen/text_size_XS"
                android:layout_marginBottom="@dimen/text_size_XS" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numplayers"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/text_size_XS"
                android:paddingRight="@dimen/text_size_XS"
                android:paddingBottom="@dimen/text_size_XS">

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/numplayers1"
                    android:contentDescription="@string/game_title"
                    android:background="@drawable/numplayers1_on"
                    android:onClick="setNumPlayers"
                    android:layout_marginRight="@dimen/text_size_XS"
                    android:layout_marginEnd="@dimen/text_size_XS" />

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/numplayers2"
                    android:contentDescription="@string/game_title"
                    android:background="@drawable/numplayers2_off"
                    android:onClick="setNumPlayers"
                    android:layout_marginRight="@dimen/text_size_XS"
                    android:layout_marginEnd="@dimen/text_size_XS" />

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/numplayers3"
                    android:contentDescription="@string/game_title"
                    android:background="@drawable/numplayers3_off"
                    android:onClick="setNumPlayers"
                    android:layout_marginRight="@dimen/text_size_XS"
                    android:layout_marginEnd="@dimen/text_size_XS" />

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/numplayers4"
                    android:contentDescription="@string/game_title"
                    android:onClick="setNumPlayers"
                    android:background="@drawable/numplayers4_off" ></ImageButton>

            </RadioGroup>


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/continue_button"
            android:background="@drawable/button_shape"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/continue_label"
            android:textSize="@dimen/text_size_M"
            android:onClick="continueGame"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/about_button"
            android:background="@drawable/button_shape"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_label"
            android:textSize="@dimen/text_size_M"
            android:onClick="aboutGame"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/exit_button"
            android:background="@drawable/button_shape"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/exit_label"
            android:textSize="@dimen/text_size_M"
            android:onClick="exit"/>

    </LinearLayout>
</LinearLayout>
